<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/popularFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.yml.presentation.features.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search"/>
    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.yml.presentation.features.popular.PopularFragment"
        android:label="@string/title_popular"
        tools:layout="@layout/fragment_popular"/>
    <fragment
        android:id="@+id/myTopFragment"
        android:name="com.example.yml.presentation.features.mytop.MyTopFragment"
        android:label="@string/title_my_top"
        tools:layout="@layout/fragment_my_top"/>

    <fragment
        android:id="@+id/aboutMovieFragment"
        android:name="com.example.yml.presentation.features.about.AboutMovieFragment"
        android:label="fragment_about_movie"
        tools:layout="@layout/fragment_about_movie" >
        <action
            android:id="@+id/action_aboutMovieFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.yml.presentation.features.movie.MovieFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_movie" />


</navigation>